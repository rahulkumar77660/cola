<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="17dp"
            app:cardElevation="3dp"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="Product photo"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/camera"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="56sp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/baseline_camera_alt_24"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:padding="6dp"
                    android:background="@drawable/name3"/>

                <TextView
                    android:id="@+id/text_ameara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35sp"
                    android:text="Camera"
                    android:textColor="#DAD8D8"
                    android:textSize="23sp"
                    android:layout_below="@id/camera"
                    android:layout_marginTop="20sp"
                    />

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="56sp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/baseline_image_24"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:padding="9dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/name3"/>


                <TextView
                    android:id="@+id/text_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gallery"
                    android:textSize="23sp"
                    android:textColor="#AAA5A5"
                    android:layout_below="@id/photo"
                    android:layout_marginLeft="39sp"
                    android:layout_marginTop="20sp"

                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>